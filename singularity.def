Bootstrap: docker
From: ubuntu:20.04
Stage: build

%setup
    touch /file1
    touch ${SINGULARITY_ROOTFS}/file2

%post
    export DEBIAN_FRONTEND=noninteractive
    apt-get update
    apt-get install -y git
    apt-get install -y mpich
     git clone --recurse-submodules https://github.com/BiceMar/sweng_project_part2.git

%runscript
    echo "Test run scripts"

%test
    echo "cloning..."
    if [ -d "sweng_project_part2" ]; then
        echo "Repository has been successfully cloned."
    else
        echo "Repository has not been cloned."
        exit 1
    fi

%labels
    SWENG4HPC project v.1.0
