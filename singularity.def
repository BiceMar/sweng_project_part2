Bootstrap: docker
From: ubuntu:22.04


%post
    export DEBIAN_FRONTEND=noninteractive
    # Commands to run at build time
    apt-get update && apt-get install -y cmake git mpich build-essential libmpich-dev

    # Commands to run when the container is executed
    echo "cloning..."
    git clone --recurse-submodules https://github.com/BiceMar/sweng_project_part2.git
    #it submodule init
    #git submodule update
    cd sweng_project_part2
    ./build.sh

%runscript
    echo "running main..."
    cd sweng_project_part2/build
    mpirun -n 2 ./main 
    echo "main finished..."
    #echo "running tests..."
    #mpirun -n 2 ./test_multiplication
    #echo "tests finished..."

%labels
    # Metadata labels
    SWENG4HPC project v.1.0

